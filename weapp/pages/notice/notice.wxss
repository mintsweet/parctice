.container {
  padding-bottom: 20rpx;
  background: #f5f5f5;
}

.top-bar {
  display: flex;
  background: rgba(22,152,43,.1);
}

.top-bar .item {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 36rpx;
}

.top-bar .item.active {
  color: #fff;
  background: #16982b;
}

.notice-no {
  margin-top: 20rpx;
  text-align: center;
}

.notice-item {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
}

.notice-item.topic {
  display: flex;
  align-items: center;
}

.notice-item.topic .avatar {
  flex: 0 0 80rpx;
  margin-right: 30rpx;
  height: 80rpx;
}

.notice-item.topic .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.notice-item.topic .detail {
  flex: auto;
}

.notice-item.topic .nickname {
  display: block;
  font-size: 30rpx;
}

.notice-item.topic .time {
  display: block;
  margin: 10rpx 0;
  color: #a1a1a1;
  font-size: 24rpx;
}

.notice-item.topic .topic {
  display: flex;
  align-items: center;
}

.notice-item.topic .topic {
  display: flex;
}

.notice-item.topic .topic text {
  flex: 0 0 100rpx;
  font-size: 30rpx;
}

.notice-item.topic .topic navigator {
  flex: auto;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  font-weight: 700;
  background: #f1f1f1;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.notice-item.follow .title {
  padding: 10rpx;
}

.notice-item.follow .title .type {
  font-size: 30rpx;
}

.notice-item.follow .title .time {
  float: right;
  font-size: 24rpx;
  color: #a1a1a1;
}

.notice-item.follow .detail {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border: 2rpx solid #f1f1f1;
}

.notice-item.follow .avatar {
  flex: 0 0 80rpx;
  width: 80rpx;
  height: 80rpx;
}

.notice-item.follow .avatar image {
  width: 100%;
  height: 100%;
}

.notice-item.follow .nickname {
  flex: auto;
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}