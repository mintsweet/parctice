.container {
  padding: 20rpx 0;
  background: #f5f5f5;
}

.acc {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  height: 150rpx;
  line-height: 180rpx;
  background: #fff;
}

.acc .icon-me {
  flex: 0 0 80rpx;
  margin-right: 40rpx;
  font-size: 80rpx;
  color: #ccc;
}

.acc .text {
  flex: auto;
}

.acc .icon-right {
  flex: 0 0 40rpx;
  color: #ccc;
}

.action {
  margin-top: 20rpx;
}

.action .item {
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: 2rpx solid #efefef;
}

.action .item:last-child {
  border-bottom: none;
}
