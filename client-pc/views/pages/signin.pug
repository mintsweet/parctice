extends ../layout

block content
  .container
    .content
      .content-title
        ol.breadcrumb
          li.breadcrumb-item
            a(href="/") 首页
          li.breadcrumb-item.active 登录
      .content-inner
        form.form-horizontal#signin_form(action="/signin", method="POST")
          .form-group
            label(for="username") 用户名：
            input.form-control(type="text", id="username")
          .form-group
            label(for="password") 密码：
            input.form-control(type="password", id="password")
          button.btn.btn-primary(type="submit") 登录
    .sidebar
      include ../includes/user_sidebar
