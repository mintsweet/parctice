extends ../layout

block content
  .user-info
    .info
      .person
        .avatar
          img(src=user.avatar, alt=user.nickname)
        .desc
          h1 #{user.nickname}
          a.edit(href=`/user/${user.nickname}/edit`) 编辑个人资料
      .gener
        .title
          a(href=`/user/${user.id}`) 动态
          a(href=`/user/${user.id}/likes`) 喜欢
          a(href=`/user/${user.id}/collections`) 收藏
          a(href=`/user/${user.id}/follower`) 粉丝
          a(href=`/user/${user.id}/following`) 关注
        .content
    .side
      .stat
        .title 个人成就
        .body
          .item
            span.practice &#xe72f;
            .content
              | 获得喜欢
              span.count #{user.collect_list}
              | 次
          .item
            span.practice &#xe6a4;
            .content
              | 获得积分
              span.count #{user.score}
              | 分
      .follow
        .item
          .title 关注了
          .count 5
        .item
          .title 关注者
          .count 0
      .collect
        a(href="/user/:nickname/collect") 收藏集