extends ../layout

block content
  .layout-content
    .user-info
      .avatar
        img(src=info.avatar)
      .desc
        h1
          | #{info.nickname}
          if info.location
            span.practice &#xe602; #{info.location}
        h2 #{info.signature}
        if user && info.id === user.id
          a.action(href=`/setting`) 编辑个人资料
        else if user && !info.follow
          a.action.follow(href="javascript:;") 关注
        else if user && info.follow
          a.action.follow(href="javascript:;") 取消关注
    .user-gener
      .title
        a(href=`/user/${info.id}`, class={active: type === 'behavior'}) 动态
        a(href=`/user/${info.id}/creates`, class={active: type === 'create'}) 专栏
        a(href=`/user/${info.id}/stars`, class={active: type === 'star'}) 喜欢
        span(class={active: type === 'following' || type === 'follower' || type === 'collect' }) 更多
          .more
            a(href=`/user/${info.id}/following`, class={active: type === 'following'}) 关注
            a(href=`/user/${info.id}/follower`, class={active: type === 'follower'}) 粉丝
            a(href=`/user/${info.id}/collections`, class={active: type === 'collect'}) 收藏集
      ul.content
        if type === 'following' || type === 'follower'
          each item in data
            li.follow-item
              a.avatar(href=`/user/${item.id}`)
                img(src=item.avatar)
              a.nickname(href=`/user/${item.id}`)
                span #{item.nickname}
              a.follow(href="javascript:;") 关注
          else
            include ../includes/no_content.pug
        else
          each item in data
            li.behavior-item
              case item.action
                when 'create'
                  span 发布了话题
                  time #{item.create_at}
                  a.topic(href=`/topic/${item.id}`) #{item.title}
                when 'star'
                  span 喜欢了话题
                  time #{item.create_at}
                  a.topic(href=`/topic/${item.id}`) #{item.title}
                when 'collect'
                  span 收藏了话题
                  time #{item.create_at}
                  a.topic(href=`/topic/${item.id}`) #{item.title}
                when 'follow'
                  span 关注了用户
                  time #{item.create_at}
                  .info
                    a.avatar(href=`/user/${item.id}`) 
                      img(src=item.avatar)
                    .detail
                      a.nickname(href=`/user/${item.id}`) #{item.nickname}
                      span.signature #{item.signature}
                    a.follow(href="javascript:;") 关注
          else
            include ../includes/no_content.pug
  aside.layout-sider
    .user-stat
      .title 个人成就
      .body
        .item
          span.practice &#xe72f;
          .content
            | 获得喜欢
            span.count #{info.star_count}
            | 次
        .item
          span.practice &#xe65f;
          .content
            | 获得收藏
            span.count #{info.collect_count}
            | 次
        .item
          span.practice &#xe6a4;
          .content
            | 获得积分
            span.count #{info.score}
            | 分
    .user-follow
      .item
        .title 关注了
        a.count(href=`/user/${info.id}/following`) #{info.following_count}
      .item
        .title 关注者
        a.count(href=`/user/${info.id}/follower`) #{info.follower_count}
    .user-collect
      a(href=`/user/${info.id}/collections`) 收藏集
  include ../includes/global_message.pug
append footer
  script.
    Utils.userInfoJS();
