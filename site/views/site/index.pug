extends ../layout.pug

block content
  .layout-content.attach
    .tab-list
      each item in [{ name: '全部', url: 'all' }, { name: '精华', url: 'good' }].concat(config.tabs)
        if currentTab === item.url
          a.active(href="?tab=" + item.url) #{item.name}
        else
          a(href="?tab=" + item.url) #{item.name}
    include ../topic/list.pug
  aside.layout-sider
    .aside-block.no-title
      a(href="https://github.com/mintsweet/practice", target="_blank") 查看源码
    include ../user/ranking.pug
    include ../topic/no_reply.pug
    .aside-block
      .title 友情社区
      ul.content
        li
          a(href="https://cnodejs.org/", target="_blank")
            img(src="/static/img/cnode_logo_32.png")