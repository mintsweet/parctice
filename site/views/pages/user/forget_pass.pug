extends ../../layout.pug

block content
  .layout-full.user-acc
    .title
      span.practice &#xe601;
      | 忘记密码
    .content
      form#forgetForm.form.form-horizontal(method="post")
        .alert.alert-error(class={hidden: !error}) #{error}
        .form-item
          label.label(for="mobile") 手机号：
          .control
            input(type="text", id="mobile", name="mobile", minlength="11", maxlength="11", placeholder="请输入你的手机号", autocomplete="off")
        .form-item
          label.label(for="newPass") 新密码：
          .control
            input(type="password", id="newPass", name="newPass", minlength="6", maxlength="18", placeholder="请输入新密码", autocomplete="off")
        .form-item
          label.label(for="piccaptcha") 验证码：
          .control
            input(type="text", id="piccaptcha", minlength="5", maxlength="5", placeholder="请输入验证码", autocomplete="off")
            img.captcha(src=picUrl, alt="图形验证码")
        .form-item
          label.label(for="sms") 手机验证码：
          .control
            input(type="text", id="sms", name="sms", minlength="6", maxlength="6", placeholder="请输入手机验证码", autocomplete="off")
            .getcode.btn 获取验证码
        .form-item
          label.label
          .control
            button.btn.submit(type="submit") 确认更改
      .other
        p 尚未拥有账号？
        p 请点击
          a(href="/signup") 注册
        p 已经拥有账号？
        p 请点击
          a(href="/signin") 登录
append footer
  script.
    var mobile = $('#mobile');
    var newPass = $('#newPass');
    var piccaptcha = $('#piccaptcha');
    var sms = $('#sms');
    var alert = $('.alert');

    $('#forgetForm').submit(function() {
      if (!mobile.val() || !/^1[3,5,7,8,9]\d{9}$/.test(mobile.val())) {
        alert.text('请填写正确格式的手机号').slideDown();
        return false;
      } else if (!newPass.val() || !/(?!^(\d+|[a-zA-Z]+|[~!@#$%^&*?]+)$)^[\w~!@#$%^&*?].{6,18}/.test(newPass.val())) {
        alert.text('请填写正确格式的新密码').slideDown();
        return false;
      } else if (!piccaptcha.val() || piccaptcha.val().length !== 5) {
        alert.text('请填写正确格式的图形验证码').slideDown();
        return false;
      } else if (!sms.val() || sms.val().length !== 6) {
        alert.text('请填写正确格式的手机验证码').slideDown();
        return false;
      }
    });
